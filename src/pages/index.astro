---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION, HOME_EYEBROW, HOME_HEADLINE, HOME_BULLETS } from '../consts';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>
			.welcome-wrap {
				display: grid;
				gap: 1.4rem;
			}
			.hero {
				border: 1px solid #1c1c1c;
				border-radius: 18px;
				padding: clamp(1.2rem, 4vw, 2.8rem);
				background: #0a0a0a;
			}
			.eyebrow {
				font-size: 0.9rem;
				letter-spacing: 0.09em;
				text-transform: uppercase;
				color: #9a9a9a;
				margin-bottom: 0.6rem;
			}
			h1 {
				font-family: "Roboto Flex", "Atkinson", "Segoe UI", sans-serif;
				font-variation-settings: "wght" 760, "wdth" 88, "GRAD" 35, "opsz" 120;
				letter-spacing: 0.09em;
				text-transform: uppercase;
				color: #ededed;
			}
			.tagline-list {
				max-width: 58ch;
				font-size: 1.05rem;
				color: #9a9a9a;
				padding-left: 0;
				list-style: none;
			}
			.tagline-list li {
				line-height: 1.6;
				margin-bottom: 0;
			}
			.tagline-list li:last-child {
				margin-bottom: 0;
			}
		</style>
	</head>
	<body>
		<Header />
		<main class="welcome-wrap">
			<section class="hero">
				<p class="eyebrow">{HOME_EYEBROW}</p>
				<h1>{HOME_HEADLINE}</h1>
				<ul class="tagline-list">
					{HOME_BULLETS.map((line) => <li>{line}</li>)}
				</ul>
			</section>
		</main>
		<Footer />
	</body>
</html>
