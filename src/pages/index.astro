---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION, HOME_EYEBROW, HOME_HEADLINE, HOME_BULLETS } from '../consts';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>
			.welcome-wrap {
				display: grid;
				gap: 1.4rem;
			}
			.hero {
				border: 1px solid rgba(0, 255, 240, 0.28);
				border-radius: 18px;
				padding: clamp(1.2rem, 4vw, 2.8rem);
				background: linear-gradient(130deg, rgba(9, 16, 38, 0.88), rgba(25, 11, 50, 0.88));
				box-shadow: var(--box-shadow);
			}
			.eyebrow {
				font-size: 0.9rem;
				letter-spacing: 0.26em;
				text-transform: uppercase;
				color: #67fff7;
				margin-bottom: 0.6rem;
			}
			h1 {
				font-family: "Orbitron", "Bahnschrift", "Atkinson", sans-serif;
				letter-spacing: 0.08em;
				text-transform: uppercase;
				text-shadow: 0 0 18px rgba(0, 255, 240, 0.45);
			}
			.tagline-list {
				max-width: 58ch;
				font-size: 1.05rem;
				color: rgba(232, 238, 255, 0.95);
				padding-left: 1.2rem;
			}
			.tagline-list li {
				line-height: 1.6;
				margin-bottom: 1rem;
			}
			.tagline-list li:last-child {
				margin-bottom: 0;
			}
		</style>
	</head>
	<body>
		<Header />
		<main class="welcome-wrap">
			<section class="hero">
				<p class="eyebrow">{HOME_EYEBROW}</p>
				<h1>{HOME_HEADLINE}</h1>
				<ul class="tagline-list">
					{HOME_BULLETS.map((line) => <li>{line}</li>)}
				</ul>
			</section>
		</main>
		<Footer />
	</body>
</html>
