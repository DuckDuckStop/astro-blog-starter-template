---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={`Contact | ${SITE_TITLE}`} description={SITE_DESCRIPTION} />
		<style>
			.contact-wrap {
				display: grid;
				gap: 1rem;
			}
			.contact-panel {
				position: relative;
				overflow: hidden;
				border: 1px solid #1c1c1c;
				border-radius: 18px;
				padding: clamp(1.2rem, 4vw, 2rem);
				background: #0a0a0a;
				isolation: isolate;
			}
			.contact-panel::before {
				content: "";
				position: absolute;
				inset: -42%;
				background: url("/blog-placeholder-about.jpg") 72% center / 50% auto no-repeat;
				transform: rotate(-16deg);
				opacity: 0.38;
				pointer-events: none;
				z-index: -2;
			}
			.contact-panel::after {
				content: "";
				position: absolute;
				inset: 0;
				background: linear-gradient(
					135deg,
					rgba(10, 10, 10, 0.78) 0%,
					rgba(10, 10, 10, 0.62) 45%,
					rgba(10, 10, 10, 0.82) 100%
				);
				pointer-events: none;
				z-index: -1;
			}
			.instagram-note {
				max-width: 56ch;
			}
			.instagram-link {
				display: inline-block;
				margin-top: 0.2rem;
			}
		</style>
	</head>
	<body>
		<Header />
		<main class="contact-wrap">
			<section class="contact-panel">
				<h1>Contact</h1>
				<p class="instagram-note">
					For inquiries, DM on Instagram.
					<a class="instagram-link" href="https://instagram.com/atxpixel" target="_blank" rel="noopener noreferrer">
						instagram.com/atxpixel
					</a>
				</p>
			</section>
		</main>
		<Footer />
	</body>
</html>
