---
import HeaderLink from './HeaderLink.astro';
import AnimatedLogo from './AnimatedLogo.astro';
import { SITE_TITLE } from '../consts';
---

<header>
	<nav>
		<h2>
			<a class="brand" href="/">
				<AnimatedLogo />
				<span class="brand-text">{SITE_TITLE}</span>
			</a>
		</h2>
		<div class="internal-links">
			<HeaderLink href="/">Welcome</HeaderLink>
			<HeaderLink href="/about">About</HeaderLink>
			<HeaderLink href="/contact">Contact</HeaderLink>
		</div>
	</nav>
</header>
<style>
	header {
		margin: 0;
		padding: 0 1em;
		background: #0a0a0a;
		border-bottom: 1px solid #1c1c1c;
	}
	h2 {
		margin: 0;
		font-size: 1em;
		letter-spacing: 0.05em;
		text-transform: uppercase;
	}
	.brand {
		display: inline-flex;
		align-items: center;
		gap: 0.25rem;
	}
	.brand :global(.animated-logo) {
		flex: 0 0 auto;
	}
	.brand .brand-text {
		font-family: "Roboto Flex", system-ui, -apple-system, Segoe UI, Arial, sans-serif;
		font-variation-settings: "wght" 600, "wdth" 105, "opsz" 32;
		font-weight: 600;
		font-optical-sizing: auto;
		letter-spacing: 0.05em;
		text-transform: uppercase;
		color: #ededed;
	}

	h2 a,
	h2 a.active {
		text-decoration: none;
	}
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
		gap: 1rem;
	}
	nav a {
		padding: 1em 0.5em;
		color: #9a9a9a;
		border-bottom: 3px solid transparent;
		text-decoration: none;
		font-variation-settings: "wght" 500, "wdth" 95, "opsz" 12, "GRAD" 40;
		letter-spacing: 0.04em;
		text-transform: uppercase;
	}
	nav a.active {
		text-decoration: none;
		border-bottom-color: var(--accent-violet);
		color: #ededed;
	}
	.internal-links {
		display: flex;
		gap: 0.3rem;
		flex-wrap: wrap;
	}
	@media (max-width: 720px) {
		nav {
			align-items: flex-start;
			flex-direction: column;
			padding-bottom: 0.6rem;
		}
	}
</style>
